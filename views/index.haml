!!! 5
%html
  %head
    %meta{ charset: "utf-8" }
    
    %link{ href: "css/base.css", media: 'screen', rel: 'stylesheet', type: 'text/css' }

    %script{ src: "js/lib/zepto.min.js", type: "text/javascript" }
    %script{ src: "js/lib/moment.min.js", type: "text/javascript" }
    %script{ src: "js/base.js", type: "text/javascript" }

    %title WMATA Info Board
  
  %body.error
    %header.valign
      %object{ class: "metro-logo", data: "img/metro.svg", type: "image/svg+xml" }
      %span.date Hello!
      %span.time ---

    #wrapper
      %ul.lines
        - @lines.each do |name, abbr|
          %li{ :class => "valign #{name.downcase}line" }
            %abbr.line{ :title => "#{name} Line" }
              #{abbr}
            %span.status
              On Time
            
      #content
        %section.message
          %p.error
            Red Line: Trains are single tracking btwn Van Ness & Dupont Circle due to scheduled track work. Expect delays through tonight's closing.

          %p.normal 
            Metrorail holiday hours: Christmas Eve 5am - Midnight, Christmas Day 7am - Midnight (Sunday schedule), New Yearâ€™s Eve 5am - 2am

    %footer
      %section.elevator
        .icon
        %h3 Elevator Outage
        %p Farragut North

      %section.shuttle
        .icon
        %h3 Shuttle Service
        %p Dupont Circle
